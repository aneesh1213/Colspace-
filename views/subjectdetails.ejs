<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Head content for subjectdetails.ejs, including Bootstrap styles -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <title><%= subject.name %> - <%= departmentName %> | Subject Details</title>
    <style>
        body {
            background-color: #f8f9fa;
            color: #495057;
        }

        .container {
            max-width: 800px;
            margin: 40px auto;
        }

        h2 {
            color: #007bff;
        }

        h3 {
            margin-top: 20px;
            color: #343a40;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            margin-bottom: 10px;
        }

        .btn-upload {
            background-color: #28a745;
            color: #fff;
        }
    </style>
</head>

<body>
    <% const departmentId = locals.departmentId; %>
    <% const subjectId = locals.subjectId; %>
    <div class="container">
        <h2 class="pb-2 border-bottom">
            <%= subject.name %> - <%= departmentName %> | Subject Details
        </h2>

        <!-- Display notes -->
        <h3>Notes</h3>
        <ul>
            <% filesByCategory.notes.forEach(note => { %>
                <li><a href="<%= note.downloadLink %>"><%= note.title %></a></li>
            <% }) %>
        </ul>

        <!-- Display assignments -->
        <h3>Assignments</h3>
        <ul>
            <% filesByCategory.assignments.forEach(assignment => { %>
                <li><a href="<%= assignment.downloadLink %>"><%= assignment.title %></a></li>
            <% }) %>
        </ul>

        <!-- Display PowerPoints (PPTs) -->
        <h3>PowerPoints (PPTs)</h3>
        <ul>
            <% filesByCategory.ppts.forEach(ppt => { %>
                <li><a href="<%= ppt.downloadLink %>"><%= ppt.title %></a></li>
            <% }) %>
        </ul>

        <!-- Display question papers -->
        <h3>Question Papers</h3>
        <ul>
            <% filesByCategory.questionPapers.forEach(questionPaper => { %>
                <li><a href="<%= questionPaper.downloadLink %>"><%= questionPaper.title %></a></li>
            <% }) %>
        </ul>

        <!-- Upload button and form -->
        <h3>Upload Files</h3>
        <form action="/upload/<%= departmentId %>/<%= subjectId %>" method="post" enctype="multipart/form-data">

            <div class="mb-3">
                <label for="file" class="form-label">Select File:</label>
                <input type="file" class="form-control" id="file" name="file" required>
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Select Category:</label>
                <select class="form-select" id="category" name="category" required>
                    <option value="notes">Notes</option>
                    <option value="assignments">Assignments</option>
                    <option value="ppts">PowerPoints (PPTs)</option>
                    <option value="questionPapers">Question Papers</option>
                    <!-- Add additional categories as needed -->
                </select>
            </div>
            <input type="hidden" name="departmentId" value="<%= departmentId %>">

            <input type="hidden" name="subjectId" value="<%= subjectId %>">
            <button type="submit" class="btn btn-upload">Upload</button>
        </form>

        <!-- Feedback messages -->
        <% if (typeof message !== 'undefined') { %>
            <div class="alert alert-<%= messageType %> mt-3" role="alert">
                <%= message %>
            </div>
        <% } %>

        <!-- Navigation Back to Subjects Page -->
        <a href="/subjects/<%= departmentId %>/<%= subjectId %>" class="btn btn-secondary mt-3">Back to Subjects Page</a>
    </div>

    <!-- Bootstrap JS and addition  al scripts (if any) -->
</body>

</html>
