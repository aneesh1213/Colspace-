<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CollegeSpace Dashboard</title>
    <!-- Add Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <!-- Add custom styles -->
    <style>
        body {
            background: linear-gradient(to bottom, #05386B, #05CDB9);
            color: #EDF5E1;
        }

        .header-section {
            background-color: #05386B;
            color: #EDF5E1;
            padding: 40px 20px; /* Adjust padding */
            position: relative;
            margin-bottom: 30px; /* Add margin bottom */
        }

        .header-title {
            display: inline-block;
            margin-right: 20px; /* Add margin right */
        }

        .login-signup-buttons {
            position: absolute;
            top: 50%;
            right: 30px; /* Adjust right position */
            transform: translateY(-50%);
        }

        .login-signup-buttons .btn {
            margin-bottom: 10px;
            display: block;
        }

        /* Style for department cards */
        .department-card {
            background-color: #EDF5E1;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .department-card h3 {
            margin-bottom: 10px;
            color: black; /* Set department name text color to black */
        }

        .department-card p {
            margin-bottom: 20px;
            color: black; /* Set department description text color to black */
        }

        .explore-btn {
            background-color: #05386B;
            border-color: #05386B;
        }

        .explore-btn:hover {
            background-color: #ffffff;
            color: #05386B;
        }
    </style>
</head>

<body>
    <div class="header-section text-center">
        <div class="header-title">
            <h1 class="display-4 fw-bold">COLLEGESPACE</h1>
            <p class="lead">Your Gateway to Educational Resources</p>
        </div>
        
        <!-- Login and Signup Buttons -->
        <div class="login-signup-buttons">
            <a href="/login" class="btn btn-primary">Login</a>
            <a href="/signup" class="btn btn-primary">Signup</a>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <% for (const department of departments) { %>
                <div class="col-md-4 mb-4">
                    <div class="department-card">
                        <h3><%= department.name %></h3>
                        <p><%= department.description %></p>
                        <a href="/department/<%= department._id %>" class="btn btn-primary explore-btn">Explore</a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <footer class="text-center py-3">
        <p>&copy; 2024 CollegeSpace. All rights reserved.</p>
    </footer>

    <!-- Add Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

    <!-- Add script for logging departments -->
    <!-- <script>
        console.log('Departments:', <%= JSON.stringify(departments) %>);
    </script> -->
</body>

</html>
